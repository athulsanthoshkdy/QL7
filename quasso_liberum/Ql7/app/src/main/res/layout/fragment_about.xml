<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottomnav_icon"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="QUASSO LIBERUM 7"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/bottomnav_icon"/>
        <TextView
            android:padding="10dp"
            android:layout_gravity="center_horizontal|center"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/image_bg"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="@string/about_ql"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Website"
            android:id="@+id/website"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/website"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:textColor="@color/cardview_light_background"
            android:linksClickable="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faceook"
            android:id="@+id/facebook"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/facebook"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:textColor="@color/cardview_light_background"
            android:linksClickable="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/insta"
            android:id="@+id/instagram"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/instagram"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:textColor="@color/cardview_light_background"
            android:linksClickable="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="serif"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:text="DEVELOPERS"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/junaid"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cevcorner"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Junaid"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/athul"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cevcorner"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Athul"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rithwick"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cevcorner"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:gravity="center"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rthwik"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>